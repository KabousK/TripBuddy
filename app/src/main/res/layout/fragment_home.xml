<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tb_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/tb_text"
        android:text="Trip Buddy"
        android:textSize="32sp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/tb_text"
        android:text="@string/home_welcome"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/tvStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/tb_text"
        android:textSize="16sp"
        tools:text="Trips: 10   TES: 83" />

    <LinearLayout
        android:id="@+id/home_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_gallery"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/btn_view_gallery"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/tb_primary"
            app:strokeColor="@color/tb_accent"
            app:strokeWidth="1dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plan_trip"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/btn_plan_trip"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/tb_primary"
            app:strokeColor="@color/tb_accent"
            app:strokeWidth="1dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_memory"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/btn_create_memory"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/tb_primary"
            app:strokeColor="@color/tb_accent"
            app:strokeWidth="1dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</LinearLayout>